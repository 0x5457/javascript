{
    "compilerOptions": {
        "module": "nodenext",
        "noImplicitAny": false,
        "target": "es2019",
        "lib": ["es2023"],
        "moduleResolution": "nodenext",
        "removeComments": false,
        "sourceMap": true,
        "noLib": false,
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "useDefineForClassFields": false,
        "paths": {
            "node-fetch/externals": ["./node_modules/@types/node-fetch/externals.d.ts"]
        }
        // enable this in the future
        // "declarationMap": true
    },
    "exclude": ["node_modules", "src/*_test.ts", "src/test", "dist"],
    "include": ["*.ts", "src/**/*"]
}
